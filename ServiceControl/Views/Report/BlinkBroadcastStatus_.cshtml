
@{
    Layout = null;
}
<script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/grid-0.4.5.min.js" type="text/javascript"></script>
<script type="text/javascript">
    var gridBL; 
    function AutoReloadBL() {

        gridBL.reload();
        gridBL.parent().find("div[data-role='loading-cover']").remove();
        gridBL.parent().find("div[data-role='loading-text']").remove();
    }

    window.setInterval(AutoReloadBL, 120000);

    $(document).ready(function () {
        gridBL = $("#gvBanglalink").grid({
            dataKey: "RowID",
            uiLibrary: "bootstrap",
            columns: [
                { field: "Processing", sortable: true },
                { field: "Sent", sortable: true },
                { field: "Port", sortable: true },
                { field: "Service", sortable: true }
            ],
            pager: { enable: false, limit: 5, sizes: [2, 5, 10, 20] }

        });
    });
</script>
<div>
    <h3>Banglalink</h3>    
    <br />
    <table id="gvBanglalink" data-source="@Url.Action("GetBroadcastStatusBL")"></table>
</div>