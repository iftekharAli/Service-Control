@model ServiceControl.Models.TrailModelStatus
@{
    ViewBag.Title = "Robi SDP Trail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/grid-0.4.5.min.js" type="text/javascript"></script>
<script type="text/javascript">
    var gridGP;

    function AutoReloadGP() {
        gridGP.reload();
        gridGP.parent().find("div[data-role='loading-cover']").remove();
        gridGP.parent().find("div[data-role='loading-text']").remove();

    }

    window.setInterval(AutoReloadGP, 3000);

    $(document).ready(function () {
        gridGP = $("#gvGP").grid({
            dataKey: "MSISDN",
            uiLibrary: "bootstrap",
            columns: [
                { field: "Time", sortable: true },
                { field: "MSISDN", sortable: true },
                { field: "SMS", sortable: true }

            ],
            pager: { enable: false, limit: 5, sizes: [2, 5, 10, 20] }

        });
    });
</script>


<h1>Robi SDP</h1>
    @Html.DisplayFor(m => m.TPS)

<table id="gvGP" data-source="@Url.Action("GetFollowTrailRobi")"></table>